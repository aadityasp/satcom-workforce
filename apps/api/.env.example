# Database
DATABASE_URL="postgresql://satcom:satcom_dev_password@localhost:5432/satcom_workforce?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_SECRET="your-refresh-token-secret-change-in-production"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development

# MinIO (S3-compatible storage)
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY="satcom_minio"
MINIO_SECRET_KEY="satcom_minio_secret"
MINIO_BUCKET="satcom-files"

# Email (SMTP)
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@satcom.com"

# OTP Settings
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Presence Settings
PRESENCE_ONLINE_THRESHOLD_SECONDS=120
PRESENCE_AWAY_THRESHOLD_SECONDS=900

# Redis
REDIS_URL="redis://localhost:6379"

# CORS
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
AUTH_THROTTLE_LIMIT=5

# Logging
LOG_LEVEL="debug"
