{
  "expo": {
    "name": "Satcom Workforce",
    "slug": "satcom-workforce",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "satcom",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A1628"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.satcom.workforce",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We use your location for office check-in verification.",
        "NSLocationAlwaysUsageDescription": "We use your location for office check-in verification.",
        "NSMicrophoneUsageDescription": "We need microphone access for voice notes in chat."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A1628"
      },
      "package": "com.satcom.workforce",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Satcom Workforce to use your location for office check-in."
        }
      ],
      "react-native-reanimated"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
