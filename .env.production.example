# ============================================
# Satcom Workforce - Production Environment
# ============================================
# Copy to .env and fill in actual values before running:
#   docker compose -f docker-compose.prod.yml up -d
#
# NEVER commit the actual .env file to version control.

# ---------------------------------------------------------
# PostgreSQL
# ---------------------------------------------------------
POSTGRES_USER=satcom
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=satcom

# ---------------------------------------------------------
# JWT Authentication
# ---------------------------------------------------------
# Generate secrets with: openssl rand -base64 48
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL
JWT_REFRESH_EXPIRES_IN=7d

# ---------------------------------------------------------
# MinIO Object Storage
# ---------------------------------------------------------
MINIO_ROOT_USER=satcom_minio
MINIO_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD
MINIO_BUCKET=satcom-uploads

# ---------------------------------------------------------
# SMTP (Email)
# ---------------------------------------------------------
# Replace with production email service (SendGrid, SES, etc.)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=CHANGE_ME_SENDGRID_API_KEY
SMTP_FROM=noreply@satcom-workforce.com

# ---------------------------------------------------------
# Web Application
# ---------------------------------------------------------
# Set to your production domain
NEXT_PUBLIC_API_URL=https://app.satcom-workforce.com/api/v1
NEXT_PUBLIC_WS_URL=wss://app.satcom-workforce.com

# ---------------------------------------------------------
# Backup
# ---------------------------------------------------------
BACKUP_RETENTION_DAYS=30

# ---------------------------------------------------------
# CORS (comma-separated origins)
# ---------------------------------------------------------
CORS_ORIGINS=https://app.satcom-workforce.com
